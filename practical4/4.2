<head>
  <style>
    .box {
      width: 200px;
      height: 200px;
      background-color: rgb(170, 5, 235);
      box-shadow: 5px 5px 10px #888888;
    }
    

    .orientation {
      width: 100px;
      height: 100px;
      margin: 10px;
      padding: 10PX;
      background-color: lightgreen;
    }

    @media (orientation: potrait) {
      .orientation {
        background-color: lightblue;
      }
    }

    .gradient {
      width: 300px;
      height: 200px;
      background: linear-gradient(to right, #23c062, #201710);
    }

    .transform {
      width: 100px;
      height: 100px;
      background-color: rgb(34, 66, 171);
      transform: rotate(45deg);
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(45deg);
    }

  </style>
</head>
<body>
  <div class="box">Box with Shadow</div>
  <div class="orientation">Orientation Example</div>
  <div class="gradient">Gradient Background</div>
  <div class="transform">Transformation </div>
</body>
</html>
